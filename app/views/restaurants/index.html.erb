<div class="jumbotron">
  <h1>Le guide des restaurants</h1>
</div>

<div class="notice">
  <%= flash[:notice] %>
</div>


<table class ="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Addresse</th>
      <th>Phone</th>
      <th>Category</th>
      <th>#Reviews</th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant)%></td> <td><%= restaurant.address %></td> <td><%= restaurant.phone %></td> <td><%= restaurant.category.name %></td> <td><%=restaurant.reviews.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= link_to 'Add a restaurant', new_restaurant_path, class: "btn btn-primary" %>